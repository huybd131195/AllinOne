<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.account.AccountFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="@dimen/dps1000">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="@dimen/dps120"
            android:layout_height="@dimen/dps120"
            android:contentDescription="@string/avatar"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_account_circle_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvNameAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginTop="@dimen/dps10"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/sp16" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNameAccount"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/sp16" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_marginTop="@dimen/dps10"
        android:id="@+id/btnSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvEmail"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_btn"
        android:paddingStart="@dimen/dps10"
        android:paddingEnd="@dimen/dps10"
        android:text="@string/sign_out"
        android:textColor="@color/white" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btnSignOut"
        android:id="@+id/changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dps10"
        android:background="@drawable/border_btn"
        android:paddingStart="@dimen/dps10"
        android:paddingEnd="@dimen/dps10"
        android:text="@string/change_password"
        android:textColor="@color/white" />

</RelativeLayout>

